<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mmomy"
    tools:context=".HouseStoryAfter">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="128dp"
        android:layout_height="189dp"
        android:layout_marginTop="496dp"
        android:layout_marginEnd="72dp"
        android:src="@drawable/kuyaw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="76dp"
        android:layout_height="150dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="508dp"
        android:src="@drawable/amazing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAfterHouse"
        android:layout_width="285dp"
        android:layout_height="55dp"
        android:layout_marginTop="204dp"
        android:fontFamily="@font/alphakind"
        android:text="The Owner sees you and asks why and how you were inside her house."
        android:textAlignment="center"
        android:textColor="#403D3D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHouseStoryAfter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Continue"
        app:backgroundTint="@color/black"
        android:fontFamily="@font/alphakind"
        app:layout_constraintEnd_toEndOf="@+id/txtAfterHouse"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/txtAfterHouse"
        app:layout_constraintTop_toBottomOf="@+id/txtAfterHouse" />
</androidx.constraintlayout.widget.ConstraintLayout>